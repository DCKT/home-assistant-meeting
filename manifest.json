{
  "name": "home-assistant-meeting",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Tell your Home Assistant that you're busy in meeting !",
  "homepage_url": "https://ha-meeting.thomasdeconinck.fr",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["https://meet.google.com/*", "https://*.zoom.us/*"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
